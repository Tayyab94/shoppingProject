<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DashBoard</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="~/Areas/Admin/Controllers/Dashboard" class="navbar-brand">Dash-Board</a>

            </div>
            <div class="navbar-collapse collapse headi">
                <ul class="nav navbar-nav">
                    <li><a href="/admin/pages">Pages</a></li>
                    <li><a href="/admin/pages/editSidebar">Slide Bar</a></li>
                    <li><a href="/admin/shop/catagory">Catagories</a></li>
                    <li><a href="/admin/shop/showProducts">Products</a></li>
                </ul>
                <ul class="navbar-right">
                    <li>
                        <span class="glyphicon glyphicon-shopping-cart" style="color:white"> </span>
                        @Html.ActionLink("Cart", "Index", "Home", new { target = "_blank" })

                        @*<a href="#" target="_blank" class="navbar-brand">Shoppin Cart</a>*@
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/scripts")
    @RenderSection("scripts", required: false)
</body>
</html>
